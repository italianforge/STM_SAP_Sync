# Environment configuration
ENV=development

# Database URLs
POSTGRES_URL=postgresql://user:password@localhost:5432/database
SAP_DB_URL=mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Logging configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIR=logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Sync configuration
BATCH_SIZE=1000
MAX_RETRIES=3
